<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/materialToolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_0"
    android:hapticFeedbackEnabled="false"
    android:visibility="visible"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="450dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/waves_2" />

    <ImageView
        android:id="@+id/hand_main_pic"
        android:layout_width="320dp"
        android:layout_height="380dp"
        android:layout_marginTop="176dp"
        android:contentDescription="@string/hand_main_pic"
        app:layout_constraintBottom_toTopOf="@+id/manual_control_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo_main"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hand_white_strings" />

    <Button
        android:id="@+id/con_activity_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="@string/button_connect"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/text_color"
        android:textColorLink="@color/text_color"
        android:textSize="18sp"
        app:icon="@android:drawable/stat_sys_data_bluetooth"
        app:iconSize="22sp"
        app:iconTint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/grip_patterns_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/grip_patterns"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/text_color"
        android:textColorLink="@color/text_color"
        android:textSize="18sp"
        app:icon="@drawable/choice_light"
        app:iconSize="22sp"
        app:iconTint="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/con_activity_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manual_control_btn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/manual_control_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:contentDescription="access_manual_activity"
        android:text="@string/manual_control"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/text_color"
        android:textColorLink="@color/text_color"
        android:textSize="18sp"
        app:icon="@drawable/settinglines_light"
        app:iconSize="22sp"
        app:iconTint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="320dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/hand_main_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>