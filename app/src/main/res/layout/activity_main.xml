<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/materialToolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_0"
    android:hapticFeedbackEnabled="false"
    android:visibility="visible"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/con_activity_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="@string/button_connect"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/text_color"
        android:textColorLink="@color/text_color"
        android:textSize="16dp"
        app:icon="@android:drawable/stat_sys_data_bluetooth"
        app:iconSize="20dp"
        app:iconTint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.Material3.Button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Grip patterns"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/text_color"
        android:textColorLink="@color/text_color"
        android:textSize="16dp"
        app:icon="@drawable/choice_light"
        app:iconSize="20dp"
        app:iconTint="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/con_activity_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.48" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.Material3.Button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Manual control"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/text_color"
        android:textColorLink="@color/text_color"
        android:textSize="16dp"
        app:icon="@drawable/settinglines_light"
        app:iconSize="20dp"
        app:iconTint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="365dp"
        android:layout_height="365dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169"
        app:srcCompat="@drawable/hand_white" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.259"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>